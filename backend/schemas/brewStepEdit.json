{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The schema to edit a brew step",
    "description": "The schema to edit a brew step.",
    "default": {},
    "examples": [
        {
            "brewid": 1,
            "brewstepid": 1,
            "isfinalstep": false,
            "stepdate": "2012-04-23T18:25:43.511Z",
            "stepstartgravity": 1.01,
            "stependgravity": 1.03,
            "stepnotes": "Ending gravity at 1.010. Added 1/2lbs honey."
        }
    ],
    "required": [
        "brewid",
        "brewstepid"
    ],
    "properties": {
        "brewid": {
            "$id": "#/properties/brewid",
            "type": "integer",
            "title": "The brewid schema",
            "description": "An explanation about the purpose of this instance.",
            "default": 0,
            "examples": [
                1
            ]
        },
        "brewstepid": {
            "$id": "#/properties/brewstepid",
            "type": "integer",
            "title": "The brewstepid schema",
            "description": "An explanation about the purpose of this instance.",
            "default": 0,
            "examples": [
                1
            ]
        },
        "isfinalstep": {
            "$id": "#/properties/isfinalstep",
            "type": "boolean",
            "title": "The isfinalstep schema",
            "description": "An explanation about the purpose of this instance.",
            "default": false,
            "examples": [
                false
            ]
        },
        "stepdate": {
            "$id": "#/properties/stepdate",
            "type": "string",
            "title": "The stepdate schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "2012-04-23T18:25:43.511Z"
            ]
        },
        "stepstartgravity": {
            "$id": "#/properties/stepstartgravity",
            "type": "number",
            "title": "The stepstartgravity schema",
            "description": "An explanation about the purpose of this instance.",
            "default": 0.0,
            "examples": [
                1.01
            ]
        },
        "stependgravity": {
            "$id": "#/properties/stependgravity",
            "type": "number",
            "title": "The stependgravity schema",
            "description": "An explanation about the purpose of this instance.",
            "default": 0.0,
            "examples": [
                1.03
            ]
        },
        "stepnotes": {
            "$id": "#/properties/stepnotes",
            "type": "string",
            "title": "The stepnotes schema",
            "description": "An explanation about the purpose of this instance.",
            "default": "",
            "examples": [
                "Ending gravity at 1.010. Added 1/2lbs honey."
            ]
        }
    },
    "additionalProperties": false
}